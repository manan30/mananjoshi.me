---
export type Props = { title: string; link: string };

const { link, title } = Astro.props;
---

<div class='flex items-baseline w-full'>
  <h3 class='text-primary-light font-semibold text-xl md:text-3xl'>{title}</h3>
  <a
    href={`/${link}`}
    class='ml-auto group inline-flex items-center font-semibold text-primary-light transition mr-1'
  >
    View all
    <svg
      class='mt-0.5 ml-2 -mr-1 stroke-primary-light stroke-2'
      fill='none'
      width='10'
      height='10'
      viewBox='0 0 10 10'
      aria-hidden='true'
    >
      <path class='opacity-0 transition group-hover:opacity-100' d='M0 5h7'
      ></path>
      <path class='transition group-hover:translate-x-[3px]' d='M1 1l4 4-4 4'
      ></path>
    </svg>
  </a>
</div>
