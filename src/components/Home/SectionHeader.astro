---
export type Props = { title: string; link: string; hideViewAll?: boolean };

const { link, title, hideViewAll } = Astro.props;
---

<div class='flex items-baseline w-full'>
  <h3 class='text-primary-light font-semibold text-xl md:text-3xl'>{title}</h3>
  {
    !hideViewAll ? (
      <a
        href={`/${link}`}
        class='text-primary-light group ml-auto mr-1 inline-flex items-center font-semibold transition'
      >
        View all
        <svg
          class='stroke-primary-light mt-0.5 ml-2 -mr-1 stroke-2'
          fill='none'
          width='10'
          height='10'
          viewBox='0 0 10 10'
          aria-hidden='true'
        >
          <path
            class='opacity-0 transition group-hover:opacity-100'
            d='M0 5h7'
          />
          <path
            class='transition group-hover:translate-x-[3px]'
            d='M1 1l4 4-4 4'
          />
        </svg>
      </a>
    ) : null
  }
</div>
