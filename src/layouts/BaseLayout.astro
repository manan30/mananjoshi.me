---
import '@fontsource/rubik/variable.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='transition-colors ease-in-out dark:bg-primary-dark selection:bg-orange-600 selection:text-gray-50'
  >
    <div
      class='mx-auto h-screen w-full px-6 sm:max-w-lg md:max-w-xl lg:max-w-3xl'
    >
      <Header />
      <main class='min-h-[calc(100%-4rem)] md:min-h-[calc(100%-128px)]'>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
