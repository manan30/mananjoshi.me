---
import '@fontsource/rubik/variable.css';
import '../styles/global.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <link rel='mask-icon' href='/safari-pinned-tab.svg' color='#5bbad5' />
    <meta name='msapplication-TileColor' content='#da532c' />
    <meta name='theme-color' content='#ffffff' />
    <meta
      name='description'
      content='Passionate Full-Stack Engineer with a focus on seamlessly integrating front and backend technologies to deliver high-quality, user-centered applications. Always eager to learn new technologies and stay up-to-date with industry trends. Believes in bridging the gap between design and development to create exceptional user experiences. Open to new opportunities that align with values and career aspirations. Enjoys going on long drives and playing cricket in spare time. Currently based in Chicago IL'
    />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://mananjoshi.me/' />
    <meta
      property='og:description'
      content='Passionate Full-Stack Engineer with a focus on seamlessly integrating front and backend technologies to deliver high-quality, user-centered applications. Always eager to learn new technologies and stay up-to-date with industry trends. Believes in bridging the gap between design and development to create exceptional user experiences. Open to new opportunities that align with values and career aspirations. Enjoys going on long drives and playing cricket in spare time. Currently based in Chicago IL'
    />
    <meta property='og:title' content={`${title} | Manan Joshi`} />
    <meta property='title' content={`${title} | Manan Joshi`} />
    <meta property='twitter:title' content={`${title} | Manan Joshi`} />
    <meta
      property='og:image'
      content='https://mananjoshi.me/profile-image.jpg'
    />
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:url' content='https://mananjoshi.me/' />
    <meta
      property='twitter:description'
      content='Passionate Full-Stack Engineer with a focus on seamlessly integrating front and backend technologies to deliver high-quality, user-centered applications. Always eager to learn new technologies and stay up-to-date with industry trends. Believes in bridging the gap between design and development to create exceptional user experiences. Open to new opportunities that align with values and career aspirations. Enjoys going on long drives and playing cricket in spare time. Currently based in Chicago IL'
    />
    <meta
      property='twitter:image'
      content='https://mananjoshi.me/profile-image.jpg'
    />
    {
      import.meta.env.PROD ? (
        <script
          async
          defer
          type='text/partytown'
          data-website-id='80225d33-4b8f-401f-a8f6-dab137167321'
          src='https://wave-studios-tracking.up.railway.app/umami.js'
        />
      ) : null
    }
    <title>{title} | Manan Joshi</title>
  </head>
  <body
    class='transition-colors ease-in-out dark:bg-primary-dark selection:bg-orange-600 selection:text-gray-50 font-sans'
  >
    <div class='mx-auto h-screen w-full px-6 sm:max-w-2xl lg:max-w-3xl'>
      <Header />
      <main class='min-h-[calc(100%-4rem)] md:min-h-[calc(100%-2rem)]'>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
